        {
          "name": "Create Reservation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('reservation_id', response.id);",
                  "    pm.collectionVariables.set('flight_id', response.flightId);",
                  "    console.log('Reservation created:', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"FlightId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reservation",
              "host": ["{{base_url}}"],
              "path": ["api", "reservation"]
            }
          },
          "response": []
        },
