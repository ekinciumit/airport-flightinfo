{
  "info": {
    "name": "FlightInfo API",
    "description": "Comprehensive flight information management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"fullName\": \"Test User\",\n  \"password\": \"Test123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Countries",
      "item": [
        {
          "name": "Get All Countries",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/country",
              "host": ["{{base_url}}"],
              "path": ["api", "country"]
            }
          }
        },
        {
          "name": "Get Country by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/country/1",
              "host": ["{{base_url}}"],
              "path": ["api", "country", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Flights",
      "item": [
        {
          "name": "Get All Flights",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/flight",
              "host": ["{{base_url}}"],
              "path": ["api", "flight"]
            }
          }
        },
        {
          "name": "Search Flights",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/flight/search?origin=IST&destination=LHR&departureDate=2024-12-01",
              "host": ["{{base_url}}"],
              "path": ["api", "flight", "search"],
              "query": [
                {
                  "key": "origin",
                  "value": "IST"
                },
                {
                  "key": "destination",
                  "value": "LHR"
                },
                {
                  "key": "departureDate",
                  "value": "2024-12-01"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}



